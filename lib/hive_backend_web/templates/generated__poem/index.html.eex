<h1>Listing Generated poems</h1>

<h2>
  Generated poems from
</h2>


<span><%= link "101 poems from markov", to: Routes.generated__poem_path(@conn, :markov, amount: 100) %>
  </span>

  <span><%= link "101 poems from thesaurus", to: Routes.generated__poem_path(@conn, :thesaurus, amount: 100) %>
  </span>

  <span><%= link "101 poems from queneau", to: Routes.generated__poem_path(@conn, :queneau, amount: 100) %>
  </span>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Status</th>
      <th>From</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for generated__poem <- @generated_poems do %>
    <tr>
      <td><%= linebreaks(generated__poem.content) %></td>
      <td><%= generated__poem.status %></td>
      <td><%= generated__poem.from %></td>

      <td>
        <span><%= link "Show", to: Routes.generated__poem_path(@conn, :show, generated__poem) %></span>
        <span><%= link "Edit", to: Routes.generated__poem_path(@conn, :edit, generated__poem) %></span>
        <span><%= link "Delete", to: Routes.generated__poem_path(@conn, :delete, generated__poem), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Generated  poem", to: Routes.generated__poem_path(@conn, :new) %></span>
